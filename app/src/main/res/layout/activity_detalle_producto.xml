<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green_100"
    tools:context=".DetalleProductoActivity">

    <!-- Contenedor principal en vertical -->
    <LinearLayout
        android:id="@+id/detalle_producto_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="0dp"
        android:paddingBottom="0dp"
        android:paddingStart="0dp"
        android:paddingEnd="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- HEADER -->
        <include layout="@layout/layout_base_header" />

        <!-- CONTENIDO DETALLE PRODUCTO -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:id="@+id/contenedor_detalle_producto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="@dimen/main_margin"
                android:paddingStart="@dimen/main_padding"
                android:paddingEnd="@dimen/main_padding"
                >

                <ImageView
                    android:id="@+id/img"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/img_large"
                    android:layout_marginBottom="@dimen/main_margin_small"
                    android:scaleType="centerCrop"
                    android:contentDescription="Imagen" />

                <TextView
                    android:id="@+id/nombre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/main_margin_small"
                    android:layout_marginBottom="@dimen/main_margin_small"
                    android:text="Nombre del Producto"
                    android:textSize="@dimen/text_medium"
                    android:textColor="@color/emerald_800"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/precio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/main_margin_small"
                    android:text="$0.00"
                    android:textSize="@dimen/text_small"
                    android:textColor="@color/emerald_800"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/descripcion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/main_margin_small"
                    android:layout_marginBottom="@dimen/main_margin_small"
                    android:text="DescripciÃ³n del producto..."
                    android:textSize="@dimen/text_small"
                    android:textColor="@color/emerald_800" />

                <Button
                    android:id="@+id/btn_agregar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/main_margin_small"
                    android:layout_marginBottom="@dimen/main_btn_margin"
                    android:layout_marginStart="@dimen/main_btn_margin"
                    android:layout_marginEnd="@dimen/main_btn_margin"
                    android:backgroundTint="@color/emerald_800"
                    android:text="@string/agregar_al_carrito"
                    android:textSize="@dimen/text_medium"
                    android:textColor="@color/white" />
            </LinearLayout>
        </ScrollView>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>