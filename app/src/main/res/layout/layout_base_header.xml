<?xml version="1.0" encoding="utf-8"?>

<!-- HEADER reutilizable: Logo y tÃ­tulo -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/header_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="@dimen/header_padding"
    android:paddingBottom="@dimen/header_padding"
    android:paddingStart="0dp"
    android:paddingEnd="0dp"
    android:gravity="center"
    android:background="@color/emerald_800"
    android:layout_marginBottom="@dimen/header_margin">

    <!-- Logo -->
    <ImageView
        android:id="@+id/header_image1"
        android:layout_width="@dimen/header_logo"
        android:layout_height="@dimen/header_logo"
        android:src="@drawable/flower_pot"
        android:contentDescription="@string/logo_alt_txt"
        android:layout_marginEnd="@dimen/header_margin" />

    <!-- Nombre del vivero -->
    <TextView
        android:id="@+id/nombre_vivero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nombre_vivero"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="@dimen/text_large"
        android:fontFamily="sans-serif-medium" />

    <!-- Logo -->
    <ImageView
        android:id="@+id/header_image2"
        android:layout_width="@dimen/header_logo"
        android:layout_height="@dimen/header_logo"
        android:src="@drawable/flower_pot"
        android:contentDescription="@string/logo_alt_txt"
        android:layout_marginStart="@dimen/header_margin" />

</LinearLayout>