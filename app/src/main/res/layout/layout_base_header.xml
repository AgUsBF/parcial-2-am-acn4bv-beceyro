<?xml version="1.0" encoding="utf-8"?>

<!-- HEADER reutilizable: Logo y tÃ­tulo -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/header_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="start"
    android:layout_marginBottom="16dp">

    <!-- Logo -->
    <ImageView
        android:id="@+id/header_image"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/flower_pot"
        android:contentDescription="@string/logo_alt_txt"
        android:layout_marginEnd="16dp" />

    <!-- Nombre del vivero -->
    <TextView
        android:id="@+id/nombre_vivero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nombre_vivero"
        android:textColor="@color/emerald_800"
        android:textStyle="bold"
        android:textSize="@dimen/text_large"
        android:fontFamily="sans-serif-medium" />
</LinearLayout>
