<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green_100"
    tools:context=".CarritoActivity">

    <!-- Contenedor principal en vertical -->
    <LinearLayout
        android:id="@+id/carrito_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="32dp"
        android:paddingBottom="8dp"
        android:paddingStart="@dimen/main_padding"
        android:paddingEnd="@dimen/main_padding"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- HEADER -->
        <include layout="@layout/layout_base_header" />

        <!-- CONTENIDO CARRITO -->
        <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".CarritoActivity">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/titulo_carrito"
                    android:textSize="@dimen/text_large"
                    android:textStyle="bold"
                    android:gravity="center" />

                <LinearLayout
                    android:id="@+id/contenedor_carrito"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />

                <TextView
                    android:id="@+id/precio_total"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/total"
                    android:textSize="@dimen/text_medium"
                    android:textStyle="bold"
                    android:gravity="end" />

                <Button
                    android:id="@+id/btn_vaciar_carrito"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/vaciar_carrito"
                    android:backgroundTint="@android:color/holo_red_dark"
                    android:textColor="@color/white" />

            </LinearLayout>

        </ScrollView>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>